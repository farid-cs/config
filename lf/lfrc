cmd fzf $lf -remote "send $id select \"$(fd --no-ignore $($lf_hidden && echo --hidden) | fzf -e --layout=reverse)\""
cmd create %{{
	echo "Create file $PWD/"
	read  -r FILE
	mkdir -p "$(dirname "$FILE")"
	case "$FILE" in
		*/) mkdir "$FILE" ;;
		*)  touch "$FILE"
	esac
}}
cmd on-cd &{{
	export STARSHIP_SHELL=
	export STARSHIP_CONFIG=~/.config/lf/starship.toml
	fmt="$(starship prompt)"
	lf -remote "send $id set promptfmt \"$fmt\""
}}



map . set hidden!
map D delete
map a create
map i set icons!
map S fzf
map <c-t> &alacritty
on-cd
