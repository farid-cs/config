cmd fzf ${{
	MESSAGE="select \"$(fd --no-ignore $($lf_hidden && echo --hidden) | fzf -e --layout=reverse)\""
	lf -remote "send $id $MESSAGE"
}}
cmd create %{{
	echo "Create file $PWD/"
	read  -r FILE
	mkdir -p "$(dirname "$FILE")"
	case "$FILE" in
		*/) mkdir "$FILE" ;;
		*)  touch "$FILE"
	esac
}}

map . set hidden!
map D delete
map a create
map i set icons!
map S fzf
map <c-t> &alacritty
map g. cd ~/.config
map gc cd ~/code
map gd cd ~/downloads
map gm cd ~/music
map <a-/> fzf
