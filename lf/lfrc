cmd fzf ${{
	MESSAGE="select \"$(fd --no-ignore $($lf_hidden && echo --hidden) | fzf -e --layout=reverse)\""
	lf -remote "send $id $MESSAGE"
}}

cmd touch &touch "$@"
cmd mkdir &mkdir -p "$@"
cmd open &open "$f"

map . set hidden!
map D delete
map a push :touch<space>
map A push :mkdir<space>
map i set icons!
map S fzf
map <c-t> &alacritty
map g. cd ~/.config
map gc cd ~/code
map gd cd ~/downloads
map gm cd ~/music
map <a-/> fzf
